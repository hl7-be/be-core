<?xml version="1.0" encoding="utf-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
  <id value="be-careteam" />
  <url value="https://www.ehealth.fgov.be/standards/fhir/StructureDefinition/be-careteam" />
  <version value="0.1.0"/> 
  <name value="BECareTeam" />
  <status value="draft" />
  <description value="A Patient-centered care Team for a patient, typically in the context of a Care Plan. 
  This is not the same as a definition of a Care Team e.g. a hospital team or specialists team."/>
  <jurisdiction>
    <coding>
      <system value="http://unstats.un.org/unsd/methods/m49/m49.htm"/>
      <code value="056"/>
    </coding>
    <text value="Belgium" />
  </jurisdiction>
  <purpose value="This profile is used in articulation with CarePlan, to achieve the purpose of defining and maintaining Teams and Sub-Teams for a given Care Plan for a given Patient."/>
  <fhirVersion value="4.0.1" />
  <kind value="resource" />
  <abstract value="false" />
  <type value="CareTeam" />
  <baseDefinition value="http://hl7.org/fhir/StructureDefinition/CareTeam" />
  <derivation value="constraint" />
  <differential>
    <element id="CareTeam.status">
      <path value="CareTeam.status" />
      <mustSupport value="true" />
    </element>
    <element id="CareTeam.category">
      <path value="CareTeam.category" />
      <mustSupport value="true" />
    </element>
    <element id="CareTeam.subject">
      <path value="CareTeam.subject" />
      <type>
        <code value="Reference" />
        <targetProfile value="https://www.ehealth.fgov.be/standards/fhir/StructureDefinition/be-patient" />
      </type>
    </element>
    <element id="CareTeam.participant">
      <path value="CareTeam.participant" />
      <mustSupport value="true" />
    </element>
    <element id="CareTeam.note">
      <path value="CareTeam.note" />
      <mustSupport value="true" />
    </element>
  </differential>
</StructureDefinition>